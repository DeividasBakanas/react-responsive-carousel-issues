{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "rootDir": "src/app",
    "outDir": "wwwroot/app",
    "strict": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "core-js",
      "systemjs",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
